<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.transferproduct.TransferProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_transfer_product_user_label"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Select user to transfer: " />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/id_transfer_product_search_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/id_transfer_product_user_wallet_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Wallet Address" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_transfer_product_quantity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="Insert quantity:" />

                <TextView
                    android:id="@+id/id_transfer_left_quantity_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/id_transfer_product_amount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:text="1" />

            <Button
                android:id="@+id/id_transfer_product_transfer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer" />

            <Button
                android:id="@+id/id_transfer_product_cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel" />

        </LinearLayout>

